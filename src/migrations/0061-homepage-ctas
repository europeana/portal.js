module.exports = function(migration) {
  const primaryCallToAction = migration.editContentType('primaryCallToAction');
  primaryCallToAction.createField('position')
    .name('Featured Position')
    .type('Symbol')
    .validations([
      {
        "unique": true
      },
      {
        "in": [
          "home-top",
          "home-middle",
          "home-bottom"
        ]
      }
     ]);

   primaryCallToAction.changeFieldControl('position', 'builtin', 'dropdown', {
     helpText:
       'Select where to feature this CTA on the homepage.'
   });
};
