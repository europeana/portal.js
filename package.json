{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "analyze": "pnpm --filter @europeana/portal run analyze",
    "build": "pnpm --filter @europeana/portal run build",
    "cache": "pnpm --filter @europeana/portal run cache",
    "dev": "pnpm --filter @europeana/portal run dev",
    "lint:fix": "pnpm run lint --fix",
    "lint": "eslint --no-fix --ignore-path .gitignore packages",
    "start:inspect": "pnpm --filter @europeana/portal run start:inspect",
    "start": "pnpm --filter @europeana/portal run start",
    "styleguide": "pnpm --filter @europeana/styleguide run start",
    "styleguide:build": "pnpm --filter @europeana/styleguide run build",
    "stylelint": "stylelint \"**/*.scss\" \"**/*.vue\" --config .stylelintrc.cjs",
    "test:e2e": "pnpm run test:e2e:init && pnpm run test:e2e:run",
    "test:e2e:init": "touch tests/e2e/docker/nightwatch/.env tests/e2e/docker/nightwatch-visual/.env",
    "test:e2e:run": "docker-compose -f ./tests/e2e/docker/docker-compose.yml run --rm nightwatch-features",
    "test:coverage": "pnpm --filter @europeana/portal run test:coverage",
    "test:coverage:ci": "pnpm --filter @europeana/portal run test:coverage:ci",
    "test:stack:build": "docker-compose -f ./tests/e2e/docker/docker-compose.yml build",
    "test:stack:down": "docker-compose -f ./tests/e2e/docker/docker-compose.yml down",
    "test:stack:rebuild": "docker-compose -f ./tests/e2e/docker/docker-compose.yml down && pnpm run test:stack:build",
    "test:stack:start": "docker-compose -f ./tests/e2e/docker/docker-compose.yml start app nginx chrome-en chrome-ja chrome-nl",
    "test:stack:stop": "docker-compose -f ./tests/e2e/docker/docker-compose.yml stop app nginx chrome-en chrome-ja chrome-nl",
    "test:unit": "pnpm --filter @europeana/portal run test:unit",
    "test:visual": "touch tests/e2e/docker/nightwatch-visual/.env && docker-compose -f ./tests/e2e/docker/docker-compose.yml run --rm nightwatch-visual",
    "test": "pnpm run lint && pnpm run stylelint && pnpm run test:unit && pnpm --filter @europeana/portal run test:size && pnpm run test:stack:rebuild && pnpm run test:e2e"
  },
  "resolutions": {
    "@europeana/contentful": "workspace:*",
    "@europeana/mirador": "workspace:*",
    "@europeana/portal": "workspace:*",
    "@europeana/style": "workspace:*",
    "@europeana/styleguide": "workspace:*",
    "@europeana/vue-session-id": "workspace:*"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@vue/test-utils": "^1.3.0",
    "@vue/vue2-jest": "^29.2.3",
    "babel-jest": "^29.5.0",
    "eslint": "^8.38.0",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-vue": "^8.1.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lerna": "^7.2.0",
    "postcss-scss": "^4.0.5",
    "stylelint": "^14.1.0",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "vue": "^2.7.10"
  },
  "contributors": [
    "Richard Doe <richard.doe@europeana.eu>",
    "Lutz Biedinger <lutz.biedinger@europeana.eu>",
    "Mirjam Verloop <mirjam.verloop@europeana.eu>",
    "Leonie Peters <leonie.peters@europeana.eu>",
    "Alan Sutherland <alan.sutherland@europeana.eu>"
  ],
  "engines": {
    "node": "^18"
  },
  "packageManager": "pnpm@8.7.4",
  "keywords": [
    "code4lib"
  ],
  "license": "EUPL-1.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/europeana/portal.js.git"
  },
  "type": "module"
}
